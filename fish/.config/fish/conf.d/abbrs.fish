# BREW abbrs
abbr bc "brew cleanup --prune=all"
abbr bi "brew install"
abbr bic "brew install --cask"
abbr bin "brew info"
abbr binc "brew info --cask"
abbr bl "brew leaves"
abbr blr "brew leaves --installed-on-request"
abbr blp "brew leaves --installed-as-dependency"
abbr bs "brew search"

#btop
abbr bt "btop"

# exit
abbr e "exit"

# lazygit
abbr lg "lazygit"

# zoxide 
abbr j "z"
abbr jj "zi"

# system remove
abbr rmr "rm -rf"

# nvim
abbr v    "nvim"
abbr vi   "nvim"
abbr vim  "nvim"

# LSD abbrs
abbr la 'lsd -lhAt --date relative --git --permission octal'
abbr ll 'lsd -lhAS --date relative --git'
abbr ls 'lsd'
abbr lt 'lsd -lhAt --tree --date relative --git --permission octal'

# Make executable chmod +x 
abbr x "chmod +x (ls | gum filter --limit 1 --header 'chmod +x')"
